server {
    listen ${WEB_PORT};
    server_name _;
    root /app;

    location / {
        try_files $uri /index.html =404;
    }

    location /api {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_pass http://${API_HOST};
    }

    # Simple health endpoint
    location = /health {
        default_type application/json;
        return 200 '{"status":"ok"}';
    }
}